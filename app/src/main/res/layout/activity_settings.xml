<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tactical_panel"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Return to Menu"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:text="CONFIGURATION"
            android:textColor="?attr/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:fontFamily="monospace"
                android:text="DATA STORAGE"
                android:textColor="?attr/colorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDirectory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconFolder"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_folder_open"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="monospace"
                    android:text="TARGET DIRECTORY"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/iconFolder"
                    app:layout_constraintStart_toEndOf="@id/iconFolder"
                    app:layout_constraintTop_toTopOf="@id/iconFolder" />

                <TextView
                    android:id="@+id/txtCurrentPath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"
                    android:fontFamily="monospace"
                    android:text="/Pictures/GeoHUD (Default)"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/iconFolder"
                    app:layout_constraintTop_toBottomOf="@id/iconFolder" />

                <Button
                    android:id="@+id/btnChangeDir"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="monospace"
                    android:text="CHANGE PATH"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/txtCurrentPath"
                    app:strokeColor="?attr/colorPrimary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:fontFamily="monospace"
                android:text="INTERFACE"
                android:textColor="?attr/colorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconTheme"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_palette"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="monospace"
                    android:text="HUD THEME"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/iconTheme"
                    app:layout_constraintStart_toEndOf="@id/iconTheme"
                    app:layout_constraintTop_toTopOf="@id/iconTheme" />

                <Button
                    android:id="@+id/btnChangeTheme"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="monospace"
                    android:text="TACTICAL DARK (ACTIVE)"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/iconTheme"
                    app:strokeColor="?attr/colorPrimary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:fontFamily="monospace"
                android:text="SYSTEM"
                android:textColor="?attr/colorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconUpdate"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_update"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="monospace"
                    android:text="CHECK FOR UPDATES"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/iconUpdate"
                    app:layout_constraintStart_toEndOf="@id/iconUpdate"
                    app:layout_constraintTop_toTopOf="@id/iconUpdate" />

                <Button
                    android:id="@+id/btnCheckUpdate"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="monospace"
                    android:text="SCAN NETWORK"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/iconUpdate"
                    app:strokeColor="?attr/colorPrimary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:alpha="0.5"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_info_outline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:alpha="0.7"
                    android:fontFamily="monospace"
                    android:text="ABOUT GeoHUD"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/iconInfo"
                    app:layout_constraintStart_toEndOf="@id/iconInfo"
                    app:layout_constraintTop_toTopOf="@id/iconInfo" />

                <TextView
                    android:id="@+id/txtVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:fontFamily="monospace"
                    android:text="VERSION: 1.0 ALPHA\nBUILD: 2025-DEV\nDEV: DARKRED1145"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/iconInfo"
                    app:layout_constraintTop_toBottomOf="@id/iconInfo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>