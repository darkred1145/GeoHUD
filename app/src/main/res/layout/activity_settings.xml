<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURATION"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:textColor="#B71C1C"
            android:textStyle="bold"
            android.layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Settings List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECTION 1: STORAGE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA STORAGE"
                android:fontFamily="monospace"
                android:textColor="#555555"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardDirectory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/iconFolder"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_folder_open"
                    app:tint="@color/tactical_green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TARGET DIRECTORY"
                    android:fontFamily="monospace"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/iconFolder"
                    app:layout_constraintTop_toTopOf="@id/iconFolder"
                    app:layout_constraintBottom_toBottomOf="@id/iconFolder"/>

                <TextView
                    android:id="@+id/txtCurrentPath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="/Pictures/GeoHUD (Default)"
                    android:fontFamily="monospace"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/iconFolder"
                    app:layout_constraintStart_toStartOf="@id/iconFolder"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/btnChangeDir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHANGE PATH"
                    android:backgroundTint="#222222"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/txtCurrentPath"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- SECTION 2: INTERFACE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTERFACE"
                android:fontFamily="monospace"
                android:textColor="#555555"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/iconTheme"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_palette"
                    app:tint="@color/tactical_green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HUD THEME"
                    android:fontFamily="monospace"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/iconTheme"
                    app:layout_constraintTop_toTopOf="@id/iconTheme"
                    app:layout_constraintBottom_toBottomOf="@id/iconTheme"/>

                <Button
                    android:id="@+id/btnChangeTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TACTICAL DARK (ACTIVE)"
                    android:backgroundTint="#222222"
                    android:textColor="#888888"
                    android:fontFamily="monospace"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/iconTheme"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- SECTION 3: SYSTEM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM"
                android:fontFamily="monospace"
                android:textColor="#555555"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/iconUpdate"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_update"
                    app:tint="@color/tactical_green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECK FOR UPDATES"
                    android:fontFamily="monospace"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/iconUpdate"
                    app:layout_constraintTop_toTopOf="@id/iconUpdate"
                    app:layout_constraintBottom_toBottomOf="@id/iconUpdate"/>

                <Button
                    android:id="@+id/btnCheckUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCAN NETWORK"
                    android:backgroundTint="#222222"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/iconUpdate"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- INFO CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tactical_panel"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info_outline"
                    app:tint="#888888"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT GeoHUD"
                    android:fontFamily="monospace"
                    android:textColor="#888888"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/iconInfo"
                    app:layout_constraintTop_toTopOf="@id/iconInfo"
                    app:layout_constraintBottom_toBottomOf="@id/iconInfo"/>

                <TextView
                    android:id="@+id/txtVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VERSION: 1.0 ALPHA\nBUILD: 2025-DEV\nDEV: DARKRED1145"
                    android:fontFamily="monospace"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/iconInfo"
                    app:layout_constraintStart_toStartOf="@id/iconInfo"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>