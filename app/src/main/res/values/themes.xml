<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- === BASE TACTICAL THEME (RED/DEFAULT) === -->
    <style name="Theme.TerraTag" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Base Colors -->
        <item name="colorPrimary">#B71C1C</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#00FF00</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#CF6679</item>

        <!-- Force Dark Mode UI Elements -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <!-- === OPTION A: NIGHT VISION (GREEN) === -->
    <style name="Theme.TerraTag.NightVision" parent="Theme.TerraTag">
        <item name="colorPrimary">#00E676</item> <!-- Bright Green -->
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#B71C1C</item> <!-- Red accents -->
    </style>

    <!-- === OPTION B: AZURE LINK (BLUE) === -->
    <style name="Theme.TerraTag.Azure" parent="Theme.TerraTag">
        <item name="colorPrimary">#00B0FF</item> <!-- Electric Blue -->
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFD600</item> <!-- Yellow accents -->
    </style>

    <!-- === OPTION C: AMBER WARNING (ORANGE) === -->
    <style name="Theme.TerraTag.Amber" parent="Theme.TerraTag">
        <item name="colorPrimary">#FFAB00</item> <!-- Industrial Orange -->
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#00E676</item> <!-- Green accents -->
    </style>

    <!-- SPLASH SCREEN -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#000000</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.TerraTag</item>
    </style>
</resources>
