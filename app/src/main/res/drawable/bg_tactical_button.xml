<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/tactical_red" />
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@color/tactical_red_dim" />
            <stroke android:width="1dp" android:color="@color/tactical_red" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
