<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- NIGHT BASE THEME -->
    <style name="Theme.TerraTag" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#D32F2F</item> <!-- Slightly lighter red for contrast -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#00FF00</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#CF6679</item>

        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <!-- === OPTION A: NIGHT VISION (GREEN) === -->
    <style name="Theme.TerraTag.NightVision" parent="Theme.TerraTag">
        <item name="colorPrimary">#00E676</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#B71C1C</item>
    </style>

    <!-- === OPTION B: AZURE LINK (BLUE) === -->
    <style name="Theme.TerraTag.Azure" parent="Theme.TerraTag">
        <item name="colorPrimary">#00B0FF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFD600</item>
    </style>

    <!-- === OPTION C: AMBER WARNING (ORANGE) === -->
    <style name="Theme.TerraTag.Amber" parent="Theme.TerraTag">
        <item name="colorPrimary">#FFAB00</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#00E676</item>
    </style>

    <!-- SPLASH SCREEN -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#000000</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.TerraTag</item>
    </style>
</resources>